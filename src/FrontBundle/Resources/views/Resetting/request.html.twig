{% extends 'FrontBundle::base.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}
{% block body %}
    <div class="container">
    <div class="row">
          <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="form-horizontal col-md-4 col-md-offset-4">
              <h1>Resetting</h1>

              <div class="form-group">
                  <label for="username">{{ 'resetting.request.username'|trans }}</label>
                  <div class="input-group">
                      <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                      <input type="text" placeholder="username or email adresse" id="username" name="username" required="required" />
                  </div>
              </div>

              <div class="row">
                  <div class="col-md-8 col-md-offset-3">
                      <div class="form-group">
                          <div class="input-group">
                            <button type="submit" >{{ 'resetting.request.submit'|trans }}</button>
                          </div>
                      </div>
                  </div>
              </div>
          </form>
    </div>
    </div>
{% endblock %}

{% extends "FrontBundle::base.html.twig" %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-3 sidebar">

                <div class="widget widget-categories">
                    <h2>Themes</h2>
                    {% for theme in themes %}
                        <ul>
                            <li><a href="{{ path('search_results', {'theme': theme.id}) }}">{{ theme.name }}</a></li>
                        </ul>
                    {% endfor %}
                </div>

                <div class="widget widget-categories">
                    <h2>Categories</h2>
                    {% for category in categories %}
                        <ul>
                            <li><a href="{{ path('search_results', {'category': category.id}) }}">{{ category.name }}</a></li>
                        </ul>
                    {% endfor %}
                </div>


            </div>
            <div class="col-md-9">
                <div class="row">

                    {% for book in books %}
                        <div class="col-md-3 col-md-offset-1">
                            <div class="best-seller-pro">
                                <figure>
                                    <img src="{{ asset("assets/front/images/book5.png") }}" alt="">
                                </figure>
                                <div class="kode-text">
                                    <h3><a href="#">{{ book.title }}</a></h3>
                                    <label>Author</label>
                                </div>
                                <div class="kode-caption">
                                    <h3>{{ book.summary }}</h3>
                                    <div class="rating">
                                        <span>☆</span><span>☆</span><span>☆</span><span>☆</span><span>☆</span>
                                    </div>
                                    <a href="#" class="add-to-cart">Add to Librarie</a>
                                </div>
                                <label class="add-to-cart">{{ book.author }}</label>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>

    </div>
{% endblock %}
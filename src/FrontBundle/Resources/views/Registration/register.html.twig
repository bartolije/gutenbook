{% extends 'FrontBundle::base.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}

{% block body%}
<div class="container">
<div class="row">
        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'form-horizontal col-md-4 col-md-offset-4'}}) }}

        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                {{ form_widget(form.username, {'attr':{'placeholder':'Username', 'aria-describedby':'basic-addon1', 'class':'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            <div class="input-group ">
                <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></span>
                {{ form_widget(form.email, {'attr':{'placeholder':'Email', 'aria-describedby':'basic-addon1', 'class':'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                {{ form_widget(form.plainPassword.first, {'attr':{'placeholder':'Password', 'aria-describedby':'basic-addon1', 'class':'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                {{ form_widget(form.plainPassword.second, {'attr':{'placeholder':'Password Confirmation', 'aria-describedby':'basic-addon1', 'class':'form-control'}}) }}
            </div>
        </div>

    <div class="row">
        <div class="col-md-2 col-md-offset-4">
        <div class="form-group">
            <div class="input-group">
                <button type="submit" id="_submit" name="_submit" >{{ 'registration.submit'|trans }}</button>
            </div>
        </div>
        </div>
    </div>

    <p class="message">Already registred ? <a href="{{ path("fos_user_security_login") }}">Login</a></p>

    {{ form_rest(form) }}
    {{ form_end(form) }}
</div>
</div>
{% endblock %}

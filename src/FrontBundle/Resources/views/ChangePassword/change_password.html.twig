{% extends 'FrontBundle::base.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}

{% block body%}

    <div class="container">
        <div class="row">

            {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'form-horizontal col-md-4 col-md-offset-4' } }) }}

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                    {{ form_widget(form.current_password, {'attr':{'placeholder':'Current password', 'aria-describedby':'basic-addon1', 'class':'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                    {{ form_widget(form.plainPassword.first, {'attr':{'placeholder':'New password', 'aria-describedby':'basic-addon1', 'class':'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                    {{ form_widget(form.plainPassword.second, {'attr':{'placeholder':'Repeat new password', 'aria-describedby':'basic-addon1', 'class':'form-control'}}) }}
                </div>
            </div>

            <div class="row">
                <div class="col-md-8 col-md-offset-3">
                    <div class="form-group">
                        <div class="input-group">
                            <button type="submit" id="_submit" name="_submit" >{{ 'change_password.submit'|trans }}</button>
                        </div>
                    </div>
                </div>
            </div>

            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}

{% extends 'FrontBundle::base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-offset-3 col-md-offset-3 col-sm-offset-1 col-lg-6 col-md-6 col-sm-10">
            <button tooltip="New Book"><a href="{{ path('book_create') }}" class="new_button">New</a></button>
                <table class="table-category table-striped">
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Author</th>
                            <th>Editor</th>
                            <th>Categories</th>
                            <th>Themes</th>
                            <th>Published at</th>
                            <th>Summary</th>
                            <th>Edit/Delete</th>
                        </tr>

                        {% for book in books %}
                            <tr>
                                <td>{{ book.id }}</td>
                                <td>{{ book.title }}</td>
                                <td>{{ book.author }}</td>
                                <td>{{ book.editor }}</td>
                                <td>
                                    {% if not book.categories.empty %}
                                        {% for category in book.categories %}
                                            {{ category.name }}{% if not loop.last %}, {% endif %}
                                        {% endfor %}
                                    {% endif %}
                                </td>
                                <td>
                                    {% if not book.themes.empty %}
                                        {% for theme in book.themes %}
                                            {{ theme.name }}{% if not loop.last %}, {% endif %}
                                        {% endfor %}
                                    {% endif %}
                                </td>
                                <td>{{ book.publishedAt | date("d/m/y") }}</td>
                                <td>{{ book.summary }}</td>
                                <td><a href="{{ path('book_edit', { 'id': book.id }) }}" tooltip="Edit"><i class="fa fa-pencil"></i></a> /

                                    <a href="{{ path('book_delete', { 'id': book.id }) }}" class="delete" tooltip="Delete"><i class="fa fa-times"></i></a></td>

                            </tr>
                        {% endfor %}
                </table>
        </div>
    </div>
{% endblock %}
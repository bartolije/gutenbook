{% extends 'FrontBundle::base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="container">

            <div class="form-group">
                    <button tooltip="New Book" class="right-align btn btn-default" >
                        <a href="{{ path('book_create') }}" class="new_button"> <h5>New Book</h5></a>
                        <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
                    </button>
            </div>


        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Categories</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <table class="table table-striped table-bordered table-list">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Author</th>
                            <th>Editor</th>
                            <th>Categories</th>
                            <th>Themes</th>
                            <th>Published at</th>
                            <th>Summary</th>
                            <th><em class="fa fa-cog"></em></th>
                        </tr>
                        </thead>
                        <tbody >
                        <tr>
                            {% for book in books %}
                            <td>{{ book.id }}</td>
                            <td>{{ book.title }}</td>
                            <td>{{ book.author }}</td>
                            <td>{{ book.editor }}</td>
                            <td>
                                {% if not book.categories.empty %}
                                    {% for category in book.categories %}
                                        {{ category.name }}{% if not loop.last %}, {% endif %}
                                    {% endfor %}
                                {% endif %}
                            </td>
                            <td>
                                {% if not book.themes.empty %}
                                    {% for theme in book.themes %}
                                        {{ theme.name }}{% if not loop.last %}, {% endif %}
                                    {% endfor %}
                                {% endif %}
                            </td>
                            <td>{{ book.publishedAt | date("d/m/y") }}</td>
                            <td>{{ book.summary }}</td>
                            <td><a href="{{ path('book_edit', { 'id': book.id }) }}" tooltip="Edit"><em class="fa fa-pencil"></em></a> / <a href="{{ path('book_delete', { 'id': book.id }) }}" class="delete" tooltip="Delete"><em class="fa fa-times"></em></a></td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        </div>
    </div>
{% endblock %}

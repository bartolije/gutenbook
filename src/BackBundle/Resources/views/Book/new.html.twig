{% extends 'FrontBundle::base.html.twig' %}

{% block body %}
    <div class="container">
    <div class="row">
                {{ form_start(form, {'attr': {'class': 'form-horizontal col-md-6 col-md-offset-3'}}) }}

                    <h1>New Book</h1>

                <div class="form-group">
                    <label>Title</label>
                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></span>
                        {{ form_widget(form.title, {'attr':{'placeholder':'Title'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <label>Author</label>
                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        {{ form_widget(form.author, {'attr':{'placeholder':'Author'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <label>Editor</label>
                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></span>
                        {{ form_widget(form.editor, {'attr':{'placeholder':'Editor'}}) }}
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <div class="input-group">
                            <label>Categories</label>
                            {{ form_widget(form.categories, {'attr':{'class':'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <div class="input-group">
                            <label>Themes</label>
                            {{ form_widget(form.themes, {'attr':{'class':'form-control'}}) }}
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label>Summary</label>
                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></span>
                    {{ form_widget(form.summary, {'attr':{'placeholder':'summary'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <label>Publication Date</label>
                    {{ form_widget(form.publishedAt) }}
                </div>

                    <div class="input-group center-block col-md-4">
                     {{ form_widget(form.save, {'attr':{'class':'input-group date'}})}}
                    </div>

                {{ form_rest(form) }}
                {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
{% extends 'FrontBundle::base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-offset-3 col-md-offset-3 col-sm-offset-1 col-lg-6 col-md-6 col-sm-10">
            <button tooltip="New Theme"><a href="{{ path('theme_create') }}" class="new_button">New</a></button>
            <table class="table-category table-striped">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Edit/Delete</th>
                </tr>


                {% for theme in themes %}
                    <tr>
                        <td>{{ theme.id }}</td>
                        <td>{{ theme.name }}</td>
                        <td><a href="{{ path('theme_edit', { 'id': theme.id }) }}" tooltip="Edit"><i class="fa fa-pencil"></i></a> /
                            <a href="{{ path('theme_delete', { 'id': theme.id }) }}"class="delete" tooltip="Delete"><i class="fa fa-times"></i></a></td>
                    </tr>

                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}